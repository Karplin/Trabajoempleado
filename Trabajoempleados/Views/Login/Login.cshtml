@model Trabajoempleados.Models.ADMINISTRADORES


@using (Html.BeginForm())

{

    @Html.AntiForgeryToken()


    if (@ViewBag.Mensaje != null)
    {
        <div id="popupdiv" style="border: 2px solid red; background-color:white; display: none;">
            @ViewBag.Mensaje
        </div>

    }

    <body>

        <div class="login-box">

            <div class="center-page">
                <form>
                    <h2 class="text-center" style="padding:25px; padding-top: 0px;">Iniciar Sesión</h2>
                    @Html.Label("Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Correo, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control" /*, @style =
                    /*" height: 50px;  " +
                    "background-color: red;" +
                    "position: absolute;" +
                    "right: 500px;" +
                    "width: 200px;" +
                    "border: 3px solid green;"


                   */





               }
                    })
                    @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })

                    @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-2", @style = " margin-top: 16px" })
                    @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { type = "password", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })




                    <input type="submit" value="Iniciar Sesión" class="btn btn-default" style="margin-top: 16px" />

                    <div style="margin-top: 16px">
                        <a>@Html.ActionLink("¿No eres Administrador? Click Aquí", "Ver", "Trailer")</a>

                    </div>


                </form>

            </div>

        </div>

    </body>



}
@{
    ViewBag.Title = "Login";
}
