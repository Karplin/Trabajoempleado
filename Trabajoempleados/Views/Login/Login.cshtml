@model Trabajoempleados.Models.ADMINISTRADORES


@using (Html.BeginForm())

{

    @Html.AntiForgeryToken()

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    if (@ViewBag.Mensaje != null)
    {
     <div id="popupdiv" style="border: 2px solid red; background-color:white; display: none;">
    @ViewBag.Mensaje
    </div>
    }
    <body>
        <div class="login-box">

            <form>
                @Html.Label("Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })

                @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { type = "password", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })

                <input type="submit" value="Iniciar Sesión" class="btn btn-default" />

                <a>@Html.ActionLink("¿No eres Administrador? Click Aquí", "Ver", "Trailer")</a>

            </form>
        </div>

    </body>



}
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>