@model Trabajoempleados.Models.CANDIDATOS


@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layoutneutro.cshtml";
}
  

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div>
            <h4 class="text-center" style="font-size: 38px; margin:88px">Registrarse</h4>
        </div>

        <div class="center-pageCreate">

            <script type="text/javascript">
                $(function () {
                    $('.date-picker').datepicker({
                        dateFormat: 'dd/mm/yy',
                        changeMonth: true,
                        changeYear: true
                    });

                });

            </script>


            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Cedula", htmlAttributes: new { @class = "control-label col-lg-3" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control " } })
                    @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-lg-3" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Apellido", htmlAttributes: new { @class = "control-label col-lg-3" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Correo", htmlAttributes: new { @class = "control-label col-lg-3" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control ", type = "email" } })
                    @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-lg-3" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control ", type = "password" } })
                    @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Fecha de nacimiento", htmlAttributes: new { @class = " col-lg-3 fnacimientolabel" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fechanacimiento, new { htmlAttributes = new { @class = "date-picker" } })
                    @Html.ValidationMessageFor(model => model.fechanacimiento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-left: 72px; margin-top: 10px;">
                    <input type="submit" value="Registrarse" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
